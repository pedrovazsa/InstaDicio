{
 "name": "InstaDicio",
 "description": "Pesquisa o significado de qualquer palavra selecionada em Dicio.com.br",
 "version": "1.0",
 "permissions": [
   "activeTab",
   "tabs",
   "http://*/*", "https://*/*"
 ],
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["selection.js"],
     //"run_at": "document_start",
     "all_frames": true
   }
 ],
 "background": {
   "scripts": ["background.js"],
     "persistent": false
   },
   "browser_action": {
     "default_title": "Abre um novo separador em Dicio.com.br",
     "default_icon": "dicio.png"
   },
   "manifest_version": 2
 }
